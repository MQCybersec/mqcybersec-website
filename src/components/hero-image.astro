---
import { Image } from "astro:assets";
import footerImage from "~/assets/footer1.png";
---

<div class="hero-image-container">
  <Image
    src={footerImage}
    alt="Footer pattern"
    width={2732}
    height={1536}
    class="hero-image"
    loading="eager"
  />
</div>

<style>
  .hero-image-container {
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }
</style>
