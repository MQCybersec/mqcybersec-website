---
export interface Props {
  id: string;
  title: string;
  backgroundColor?: string;
}

const { title, id, backgroundColor } = Astro.props;
let bgClass = backgroundColor ? ' '+backgroundColor : '';
---

<section
  id={id}
  class={`flex scroll-mt-24 flex-col items-center gap-4 space-y-8 py-16${bgClass}`}
>
  <div class="flex flex-col items-center gap-4">
    <slot name="eyebrow" />
    <h2
      class="gradient-text text-center font-extrabold tracking-tight text-6xl"
    >
      {title}
    </h2>
  </div>
  <p class="max-w-xl text-center font-extrabold text-2xl">
    <slot name="lead" />
  </p>
  <slot />
</section>
